ShortName: pdtest
StorageClass:
  FromFile: {{.StorageClassFile}}
DriverInfo:
  Name: csi-gcepd
  SupportedFsType:
    ext2:
    ext3:
    ext4:
    # The following FS types supported by GCE PD but
    # currently we do not test the CSI Driver on Ubuntu or Windows
    # xfs: XFS only available on Ubuntu
    # ntfs: NTFS only available on Windows
  Capabilities:
    persistence: true
    block:  true
    fsGroup: true
    exec: true
    # snapshotDataSource:
    # pvcDataSource:
    multipods: true
    # RWX:
    controllerExpansion: true
    nodeExpansion: true
    # volumeLimits: # PD Supports volume limits but test is very slow
    # singleNodeVolume:
    topology: true
    # dataSource:
  SupportedMountOption:
    debug:
    nouid32:
  SupportedSizeRange:
    Min: 5Gi
    Max: 64Ti
